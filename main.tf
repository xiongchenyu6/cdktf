terraform {
  required_version = ">= 1.0"

  required_providers {
    cloudflare = {
      source  = "cloudflare/cloudflare"
      version = "~> 4.0"
    }
  }

  cloud {
    organization = "autolife-robotics"

    workspaces {
      name = "dotfiles"
    }
  }
}

provider "cloudflare" {
  api_token = var.cloudflare_api_token
}
